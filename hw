//Перед началом вывода на экран следует вывести //"старт", а после окончания вывода чисел – //"финиш".
//вывод: старт, 1, ... 9, финиш)
let numbersOne = [1,2,3,4,5,6,7,8,9];
console.log('Start, ' + numbersOne + ' Finish');
    
